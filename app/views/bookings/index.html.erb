<div class="container" style="min-height:400px;">
  <div style="margin:30px 0;text-align:right">
    <h4>حـجوزاتـك</h4>
  </div>
  <table class="table fn-booking" style="text-align:center;margin:20px 0;">
    <thead>
      <tr>
        <th scope="col">رقم الحجز</th>
        <th scope="col">الرحـلة</th>
        <th scope="col">المبلـغ</th>
        <th scope="col">حالة الحجز</th>
        <th scope="col">...</th>
      </tr>
    </thead>
    <tbody>
     <% @bookings.each do |booking| %>
      <tr>
        <tr>
          <th scope="row"><%= booking.id %></th>
          <td><a href="/trips/<%= booking.trip.id %>" ><%= booking.trip.title %></a></td>
          <td><%= booking.total %></td>
          <td>
            <% if booking.status %>
              تم قبول الحجز
            <% else %>
              يتم معالجة الحجز
            <% end %>
            
            </td>
            <td> 
                  <%= link_to 'عـرض', booking_path(booking.id) , :class => "btn btn-info btn-sm btn-show" %>
                 <%= link_to 'حـــذف', booking_path(booking.id), method: :delete , :class => "btn btn-danger btn-sm btn-show" %>
            </td>

        </tr>
    <% end %>
     
     
    </tbody>
  </table>

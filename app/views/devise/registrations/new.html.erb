<div class="container-fluid ">
      <div class="row min-vh-100">
        <div class="col-md-8 col-lg-6 col-xl-5 d-flex align-items-center">
          <div class="w-100 py-5 px-md-5 px-xl-6 position-relative top-pad-zero">
          
            <div class="text-rtl">
            <div>
               <a href="/" class="close-absolute mr-md-5 mr-xl-6 pt-5 "> 
              <svg class="svg-icon w-3rem h-3rem"style="z-index:99">
                <use xlink:href="#close-1"> 
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" id="close-1">
                  <title>Close</title>
                  <desc>A line styled icon from Orion Icon Library.</desc>
                  <path data-name="layer1" fill="none" stroke="#202020" stroke-miterlimit="10" d="M41.999 20.002l-22 22m22 0L20 20" stroke-linejoin="round" stroke-linecap="round" style="stroke:var(--layer1, #ec4a7f)"></path>
                  </svg>
                </use>
              </svg></a>
            </div>
            <div style="position:relative;height:100px">
              <%= image_tag("pangaeaclub.png", :alt => "pangaeaclub.png" ,:style => "max-width: 10rem;margin-top: 45px;position: absolute;left: 0;top: -50px;", :class => "img-fluid ")  %>
              <!-- <img src="https://d19m59y37dris4.cloudfront.net/directory/1-4-1/img/logo-square.svg" alt="..." style="max-width: 4rem;" class="img-fluid mb-3">
              -->
                <h2 style="top: 65px;position: absolute;">الـتـسجـيل</h2>
            </div>
            </div>
            <form class="form-validate">
              <div class="form-group">
                <%# first_name %>
                <div class="field">
                <%= f.label :first_name,:class => "form-label label-sign-up" %><br />
                <%= f.text_field :first_name , autofocus: true , required: true ,:class => "form-control" %>
                </div>
              </div>
               <div class="form-group">
                <%# last_name %>
                <div class="field">
                <%= f.label :last_name,:class => "form-label label-sign-up"  %><br />
                <%= f.text_field :last_name, autofocus: true , required: true,:class => "form-control"%>
                </div>
              </div>
              <div class="form-group">
                <div class="field">
                <%= f.label :email ,:class => "form-label label-sign-up"%><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Please enter your email", required: true ,:class => "form-control"%>
                </div>
              </div>
              <!-- password-->
              <div class="form-group mb-4">
                <div class="row">
                 
                      <div class="col">
                            <%= f.label :password , class: "form-label label-sign-up" %>
                      </div>

                </div>
                 <% if @minimum_password_length %>
                      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length , class: "form-label label-sign-up") %></em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control ",  placeholder: "Password" %>
              </div>
              <!-- re-password-->
              <div class="form-group mb-4">
                <div class="row">
                 
                      <div class="col">
                            <%= f.label :password_confirmation, class: "form-label label-sign-up" %><br />
                      </div>

                </div>
                     <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control ",  placeholder: "Password"%>
              </div>

               <div class="form-group">
                <%# phone %>
                <div class="field">
                <%= f.label :phone ,:class => "form-label label-sign-up"%><br />
                <%= f.text_field :phone, autofocus: true , required: true , :placeholder => "",:class => "form-control"%>
                </div>
              </div>


              <div class="form-group">
                <%# country %>
                <div class="field">
                <%= f.label :country ,:class => "form-label label-sign-up" %><br />
                  <div class="select-form-control">

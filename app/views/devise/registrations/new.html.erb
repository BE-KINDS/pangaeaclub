                  </div>
                <%# f.text_field :country, autofocus: true , required: true , :placeholder => "",:class => "form-control"%>
               
                </div>
              </div>


              
              <!-- <div class="form-group mb-4">
                <div class="custom-control custom-checkbox">
                  <% if devise_mapping.rememberable? %>
             
                  <%= f.check_box :remember_me , :class => "custom-control-input"%>
                  <%= f.label :remember_me , :class => "custom-control-label text-muted" %>
                 
                  <% end %>
                
                </div>
              </div> -->
              <!-- Submit-->
              <div class="actions">
              <%= f.submit t('.sign_up'), :class => "btn btn-lg btn-block btn-primary btn-primary-login "  %>
              </div>
              <hr data-content="OR" class="my-3 hr-text letter-spacing-2">

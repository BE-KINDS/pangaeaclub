        <div class="containr">
          <div class="row align-items-start trip-description">
            <div class="col-lg-9 pl-lg-5 aos-init aos-animate" data-aos="fade-up">
              
              <div>
                <h3 class="mb-4" style="text-align: center;"><%= @trip.title %></h3>
                <p class="paragraph"> <%= @trip.description%></p>
              </div>  

              <!-- includes & not_includes -->
              <div>
                  <section class="section-includes">
                        <div class="includes-not-includes">
                          <!-- include items -->
                          <% if !@trip.item_includeds.empty? %>
                            <div class="include">
                                <h3>القيمة متضمنه</h3>
                                <div class="trip-include">
                                    <div class="first-col">
                                    <% @trip.item_includeds.each  do |include|  %>
                                      <div class="item">
                                        <div><i class="fas fa-check-circle" style="color: green;"></i></div>
                                        <div>
                                        <strong> <%= include.title %></strong>
                                        <span style="color:gray"> <%= include.description%></span>
                                        </div>
                                      </div>
                                    <% end %>
                                    </div>
                                </div>
                            </div>
                          <% end %>
                            <!-- not include items -->
                          <% if !@trip.item_not_includeds.empty? %>
                            <div class="not-include">
                                <h3>القيمه غير متضمنه</h3>
                                <div class="trip-include">
                                    <div class="first-col">
                                    <% @trip.item_not_includeds.each  do |include|  %>
                                      <div class="item">
                                        <div><i class="fas fa-times-circle" style=" color: #ADB5BD;"></i></div>
                                        <div>
                                          <strong> <%= include.title %></strong>
                                          <span style="color:gray"> <%= include.description%></span>
                                        </div>
                                      </div>
                                    <% end %>
                                    </div>
                                </div>
                            </div>
                          <% end %>
                        </div>
                  </section>
              </div>


            </div>

             <div class="col-lg-3 mb-4 aos-init aos-animate" data-aos="fade-up">
              <div class="info-trip">
                <div class="">
                  <a class="details-guide-in-trip" href="/guides/<%= @trip.guide.id %>">
                    <div class="profile-image-guide" style="background-image: url('<%= asset_path url_for(@trip.guide.asset) %>'); border-radius: 50% !important; background-repeat: no-repeat; background-position: center; background-size: cover !important; ">
                    </div>
                    <h6 style="color:black !important;font-weight: 200;">مـع <span style="color: #FE5A59 !important;"><%= @trip.guide.first_name + " " + @trip.guide.last_name %></span> </h6>
                  </a>
                </div>

                <div>

                  <div class="detalis-trip">
                      <div>
                        <i class="sub-nav-icon fas fa-plane-departure">  </i>
                        <strong>بداية الرحـلة:</strong>
                      </div>
                      <span><%= @trip.start_date %></span>
                  </div>

                  <div class="detalis-trip"> 
                      <div>
                            <i class="sub-nav-icon fas fa-plane-arrival ">  </i>
                            <strong>نهاية الرحـلة:</strong>
                      </div>
                            <span><%= @trip.end_date %></span>
                  </div>

                  <div class="detalis-trip">
                    <div>
                      <i class="sub-nav-icon fas fa-globe-americas">  </i>
                      <strong>الدولة:</strong>
                    </div> 
                      <span><%= @trip.country %></span>
                  </div>

                  <div class="detalis-trip">
                    <div>
                      <i class="sub-nav-icon fas fa-map-marked">  </i>
                      <strong>المـكـان:</strong>
                    </div>
                      <span><%= @trip.destination %> </span>
                  </div>

                
                  <div class="detalis-trip">
                    <div>
                      <i class="sub-nav-icon  fas fa-dumbbell" >  </i>
                        <strong>المسـتوى:</strong>
                    </div>
                        <span><%= @trip.level %> </span>
                  </div>

                  <div class="detalis-trip">
                    <div>
                      <i class="sub-nav-icon  fas fa-users ">  </i> 
                      <strong>المجموعة:</strong>
                    </div>
                      <span> <%= @trip.group_size_start %>  - <%= @trip.group_size_end %> </span>
                  </div>

                  <div class="detalis-trip">
                    <div>
                      <i style="padding-right: 3px;" class="sub-nav-icon  fas fa-hourglass-end" >  </i>
                      <strong>انتـهاء الحجز:</strong>
                    </div>
                        <span><%= @trip.deadline %>  </span>
                  </div>                       

                </div>

              </div>
             </div>

            

          </div>
        </div>
       </section>

      

      </div>


      <div class="tab-pane fade" id="nav-itinerary" role="tabpanel" aria-labelledby="nav-itinerary-tab">
        <section class="section">
          <h3 class="trip-title">مـسار الـرحـلـة</h3>
          <div>
            <% if !@trip.itineraries.empty? %>
              <% counter = 0%>
              <% @trip.itineraries.each do |itinerary| %>
                  <div class="part ">
                      <div class="part-1">
                        <div>
                          <div class="header-itinerary">
                            <div class="num-itinerary"><%= counter = counter + 1 %></div>
                            <div class="title-itinerary"><h4 ><%= itinerary.title %>:</h4> <h4><%= itinerary.name %></h4> </div>
                          </div>
                          <div class="line-itinerary"><span class="line"></span></div>
                        </div>

                        <div class="description-itinerary">
                          <p><%= itinerary.description %></p>
                        </div>
                      </div>

                      <div class="part-2">
                        <%= image_tag url_for(itinerary.asset) %>
                      </div>
                  </div>
              <% end %>
            <% else %>
              أرجو اضافة مسار الرحلة
            <% end %>

              

          </div>
        </section>
      
      </div>
      <div class="tab-pane fade" id="nav-gallery" role="tabpanel" aria-labelledby="nav-gallery-tab">
        <section>
          <h3 class="trip-title">مـلتـقطـات مـن الـرحـلـة</h3>
          <div>
          <% if @trip.assets.attached?  %>
              <div class="tz-gallery gallery">
                  <div class="row" style="justify-content: center;">     
                    <% @trip.assets.each do |image| %>
                        <div class="col-sm-6 col-md-4 mb-3 trip-images">
                          <a class="lightbox" href="<%= url_for(image)%>" class = "img-fluid" target="_blank">
                          <%= image_tag image , :class => "img-fluid"%>
                          </a>
                        </div>
                    <% end%>
                  </div>
              </div>
            <% else %>
                <h1>لـم يتم ارفاق صور للـرحـلـة</h1>
            <% end %>


          </div>
        </section>  
      <div>





        </div>
      </div>

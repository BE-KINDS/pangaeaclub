<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @trip.title %>
</p>

<p>
  <strong>Sub title:</strong>
  <%= @trip.sub_title %>
</p>

<p>
  <strong>Trip type:</strong>
  <%= @trip.trip_type %>
</p>

<p>
  <strong>Country:</strong>
  <%= @trip.country %>
</p>

<p>
  <strong>Destination:</strong>
  <%= @trip.destination %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @trip.deadline %>
</p>

<p>
  <strong>Level:</strong>
  <%= @trip.level %>
</p>


<%#show the background image of guide%>
<% if @trip.asset.attached?%>
  <p>
    <strong>Background image:</strong>
    <%= image_tag url_for(@trip.asset) %>
  </p>
<% end%>


<p>
  <strong>Group size start:</strong>
  <%= @trip.group_size_start %>
</p>

<p>
  <strong>Group size end:</strong>
  <%= @trip.group_size_end %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @trip.duration %>
</p>

<hr>
<% if @trip.asset.attached?%>
  <strong>Images:</strong>
<p>
  <%#show the images of trip%>
  <% @trip.assets.each do |image| %>
    <span>
      <%= image_tag image %>
    </span>
  <% end%>
</p>
<% end%>

<p>
  <strong>Start date:</strong>
  <%= @trip.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @trip.end_date %>
</p>

<p>
  <strong>Description:</strong>
  <%= @trip.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @trip.price %>
</p>

<p>
  <strong>Guide:</strong>
  <%= @trip.guide_id %>
</p>

<p>
  <strong>Region:</strong>
  <%= @trip.region_id %>
</p>


<p id="notice"><%= notice %></p>

<h1>Item Includeds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Trip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_includeds.each do |item_included| %>
      <tr>
        <td><%= item_included.title %></td>
        <td><%= item_included.description %></td>
        <td><%= item_included.trip_id %></td>
        <td><%= link_to 'Show', item_included %></td>
        <td><%= link_to 'Edit', edit_item_included_path(item_included) %></td>
        <td><%= link_to 'Destroy', item_included, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


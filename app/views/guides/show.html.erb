<!-- START THE GUIDE SHOW -->

<div class='guide_show'>

    <!-- START HEADER -->
    <div class="header-1" style="background:linear-gradient(to bottom, rgba(0,1,2,0.4) 0%, rgba(92, 77, 66, 0.8) 100%),  url('<%= asset_path url_for(@guide.bg_image) %>');background-repeat: no-repeat; background-position: center; background-size: cover !important; height:60vh;box-shadow: 3px 4px 5px #ccc;overflow: hidden;">
    <!-- START NAV -->
          <nav class="navbar navbar-expand-lg navbar-light  py-3 " id="mainNav">
                      <div class="container">
                          <a class="navbar-brand js-scroll-trigger bg_pangaeaclub " href="/"></a><button class="navbar-toggler navbar-toggler-right collapsed" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                          <div class="navbar-collapse collapse flex-grow-zero" id="navbarResponsive" style="">
                              <ul class="navbar-nav ml-auto my-2 my-lg-0 full-ul">
                                  <li class="nav-item"> <%= link_to "الرئسية", root_path, :class => "nav-link  js-scroll-trigger" %></li>
                              <% if current_user.nil? %>
                                  <li class="nav-item"><%= link_to "تسجيل", new_user_registration_path, :class => "nav-link  js-scroll-trigger" %></li>
                                  <li class="nav-item"><%= link_to "تسجيل الدخول", new_user_session_path, :class => "nav-link  js-scroll-trigger" %></li>
                              <% else %>
                                  <li class="nav-item"><%= link_to "تعديل الحساب", edit_user_registration_path    , :class => "nav-link  js-scroll-trigger" %> </li>
                                  <li class="nav-item"><%= link_to "خروج", destroy_user_session_path, :class => "nav-link  js-scroll-trigger" , method: :delete%> </li>
                              <%# when the admin sign_in %>
                                      <% if current_user.admin %>
                                          <li class="nav-item"><%= link_to "Dashboard", '/admin' , :class => "nav-link  js-scroll-trigger" %></li>
                                      <% end%>
                              <% end %>
                              </ul>
                          </div>
                      </div>
          </nav>

    <!-- END NAV -->

    <header class="masthead" style="padding-top:20px;">
                <div class="container h-100 header-flex">
                    <div class="row h-100 align-items-center justify-content-center text-center">
                        <div class="col-lg-10 align-self-end">
                            <h1 class="text-uppercase text-black font-weight-bold" style="color:white"> الـقـائـد</h1>
                            <hr class="divider my-4">
                        </div>
                        <div class="col-lg-8 align-self-baseline">
                            <h3 class="text-white-75 font-weight-light mb-5" style="color:white">
                            <%= @guide.first_name %> <%= @guide.last_name %>
                          </h3>
                            
                        </div>
                    </div>
                </div>

      
                
    </header>


    </div>
    <!-- END the HEADER -->
    <div class="" style="background-image: url('<%= asset_path url_for(@guide.asset) %>');  height: 200px; width: 200px; border-radius: 50% !important; background-repeat: no-repeat; background-position: center; background-size: cover !important; margin: -140px auto 30px; ">
    </div>

    <!-- START Details of guide -->
    <div class="container">
          <div>

            <div class="detalis-shows ">
              <!--<i class="sub-nav-icon fas fa-plane-departure">  </i>-->  
                <strong>الـعـمـل: </strong>
                <h5><%= @guide.position %></h5>
            </div>

            <div class="detalis-shows ">
              <!--<i class="sub-nav-icon fas fa-plane-departure">  </i>-->  
                <strong>الـدولـة: </strong>
                <h5><%= @guide.country %></h5>
            </div>

            <div class="detalis-shows ">
              <!--<i class="sub-nav-icon fas fa-plane-departure">  </i>-->  
                <strong>الهوايات: </strong>
                <h5><%= @guide.hobby %></h5>
            </div>

          </div>


          <div class="guide-description">
            <h5 style="text-align: justify;"> <%= @guide.description %> </h5>
          </div>

          <!-- -->

          <!-- -->


    </div>
    <!-- END Details of guide -->


</div>
<!-- END THE GUIDE SHOW -->

<p>
  <strong>Instagram:</strong>
  <%= @guide.instagram %>
</p>




<%#show the profile image of guide%>
<% if @guide.asset.attached?%>
  <p>
    <strong>Profile image:</strong>
    <%= image_tag url_for(@guide.asset.variant(resize_to_limit: [100, 100])) %>
  </p>
<% end%>
<hr>
<%#show the background image of guide%>
<% if @guide.bg_image.attached?%>
  <p>
    <strong>Background image:</strong>
    <%= image_tag url_for(@guide.bg_image.variant(resize_to_limit: [300, 300])) %>
  </p>
<% end%>
<hr>
  <strong>Images:</strong>
<% if @guide.assets.attached?%>
  <%#show the images of guide%>
  <% @guide.assets.each do |image| %>
    <span>
      <%= image_tag image %>
    </span>
  <% end%>
<% end%>




<p>
  <strong>Position:</strong>
  <%= @guide.position %>
</p>


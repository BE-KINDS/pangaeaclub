<p id="notice"><%= notice %></p>

<h1>Guides</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Country</th>
      <th>Hobby</th>
      <th>Instagram</th>
      <th>Description</th>
      <th>Profile image</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guides.each do |guide| %>
      <tr>
        <td><%= guide.first_name %></td>
        <td><%= guide.last_name %></td>
        <td><%= guide.country %></td>
        <td><%= guide.hobby %></td>
        <td><%= guide.instagram %></td>
        <td><%= guide.description %></td></td>
        <% if guide.asset.attached?%>
        <td><%= image_tag url_for(guide.asset.variant(resize_to_limit: [100, 100]))%>
        <% end%>
        <td><%= guide.position %></td>
        <td><%= link_to 'Show', guide %></td>
</td>
        <td><%= link_to 'Destroy', guide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

